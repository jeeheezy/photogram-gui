<h1>List of photos</h1>

<form action="/add_photo_record" method="post">
  <label for="image_field">Image</label>
  <input type="text" id="image_field" name="input_image_url" placeholder="Enter a URL for the image...">
  <label for="caption_field">Caption</label>
  <textarea name="input_caption" id="caption_field" rows="2" placeholder="Enter a caption for the photo..."></textarea>
  <label for="owner_id_field">Owner ID</label>
  <input type="text" id="owner_id_field" name="input_owner_id" placeholder="Enter an ID of a User">
  <button>Add photo</button>
</form>

<hr>
<table border="1">
  <tr>
    <th>Image</th>
    <th>Caption</th>
    <th>Owner</th>
    <th>Posted</th>
    <th></th>
  </tr>

  <% @list_of_photos.each do |photo| %>
  <tr>
    <td><img src="<%= photo.image %>"></td>
    <td><%= photo.caption %></td>
    <td><%= photo.poster.username %></td>
    <td><%= photo.created_at %></td>
    <td><a href="/photos/<%= photo.id %>">Show details</a></td>
  </tr>
  <% end %>
</table>
