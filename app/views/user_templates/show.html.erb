<h1><%= @user.username %></h1>

<dl>
  <dt>ID</dt>
  <dd><%= @user.id %></dd>

  <dt>Edit user</dt>
  <dd>
  <form action="/update_user/<%= @user.id %>" method="post">
    <label for="username_field">Username</label>
    <input type="text" id="username_field" name="input_username" value="<%= @user.username %>">
    <button>Update user</button>
  </form>
  </dd>
</dl>

<h2>Own photos (<%= @user.own_photos.count%>)</h2>

<table border="1">
  <tr>
    <th>Image</th>
    <th>Owner</th>
    <th>Caption</th>
    <th>Posted</th>
    <th></th>
  </tr>
  <% @user.own_photos.each do |photo_instance| %>
    <tr>
      <td><img src="<%= photo_instance.image %>"></td>
      <td><%= photo_instance.poster.username %></td>
      <td><%= photo_instance.caption %></td>
      <td><%= photo_instance.created_at%></td>
      <td><a href="/photos/<%= photo_instance.id%>">Show detail</a></td>
    </tr>
  <% end %>
</table>
